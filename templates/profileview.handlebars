<body>
    <div class="card mb-4">
        <div class="card-header">
            <strong>Profile</strong>
        </div>

        <div class="card-body">
            <div class="example">
                <div class="tab-content rounded-bottom">
                    <div class="row align-items-start">
                        <!-- Profile Picture and Username -->
                        <div class="col-md-3">
                            <img src="{{profilePhotoPath}}" style="width: 120px; height: 120px;" class="img-thumbnail mb-3" alt="{{user.username}}" />
                            <div class="input-group mb-3">
                                <span class="input-group-text">@</span>
                                <input type="text" class="form-control" value="{{user.username}}" aria-label="Username" readonly />
                            </div>
                            <div class="mb-3">
                                <label for="formFile" class="form-label">Change Profile</label>
                                <form action="/api/update-profile-picture" method="POST" enctype="multipart/form-data">
                                    <input class="form-control" type="file" id="formFile" name="profilePhoto" />
                                    <button type="submit" class="btn btn-primary mt-3">Upload Picture</button>
                                </form>
                            </div>
                            <div class="d-flex justify-content-end">
                                <a href="/reset-password" class="btn btn-warning mt-3">Reset Password</a>
                            </div>
                        </div>

                        <!-- Languages Section -->
                        <div class="col-md-6">
                            <div class="row">
                                <!-- Languages Fluent In -->
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-header bg-primary text-white">
                                            Languages Fluent In
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            {{#each user.languagesFluent}}
                                            <li class="list-group-item">{{this}}</li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                </div>

                                <!-- Languages Learning -->
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-header bg-success text-white">
                                            Languages Learning
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            {{#each user.languagesLearning}}
                                            <li class="list-group-item">{{this}}</li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Badges Section -->
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-header bg-info text-white">
                                    Earned Badges
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        {{#each badges}}
                                        <div class="col-md-12 mb-2">
                                            <div class="card text-center" style="height: 100px;">
                                                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                                    <span class="badge {{#if earned}}bg-success{{else}}bg-secondary{{/if}} text-white fs-6">
                                                        {{this.name}}
                                                    </span>
                                                    <small class="text-muted">{{this.description}}</small>
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
