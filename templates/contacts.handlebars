<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <h3>Contacts List</h3>
            </div>
            <div class="card-body">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <button class="nav-link active" id="nav-home-tab" data-coreui-toggle="tab" data-coreui-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Friends</button>
                        <button class="nav-link" id="nav-profile-tab" data-coreui-toggle="tab" data-coreui-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Blocked</button>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <!-- Friends Tab -->
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each contactsList}}
                                <tr>
                                    <td>
                                        <img src="/{{this.profilePhoto}}" alt="{{this.username}}" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                    </td>
                                    <td> 
                                        <div class="col-auto">
                                        <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
                                        <div class="input-group">
                                        <div class="input-group-text">@</div>
                                        <input type="text" class="form-control" id="autoSizingInputGroup" placeholder="{{this.username}}" readonly>
                                        </div></td>
                                    <td>
                                        <form action="/message" method="POST" class="d-inline">
                                            <input type="hidden" name="contactId" value="{{this.username}} ">
                                            <button class="btn btn-success btn-sm">Message Now</button>
                                        </form>
                                        <form action="/block-user" method="POST" class="d-inline">
                                            <input type="hidden" name="blockId" value="{{this.username}}">
                                            <button class="btn btn-danger btn-sm">Block</button>
                                        </form>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="3" class="text-center">No friends added yet.</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- Blocked Tab -->
                    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each blockedList}}
                                <tr>
                                    <td>
                                        <img src="/{{this.profilePhoto}}" alt="{{this.username}}" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                    </td>
                                    <td><div class="col-auto">
                                        <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
                                        <div class="input-group">
                                        <div class="input-group-text">@</div>
                                        <input type="text" class="form-control" id="autoSizingInputGroup" placeholder="{{this.username}}" readonly>
                                        </div></td></td>
                                    <td>
                                        <form action="/unblock-user" method="POST" class="d-inline">
                                            <input type="hidden" name="unblockId" value="{{this.username}}">
                                            <button class="btn btn-warning btn-sm">Unblock</button>
                                        </form>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="3" class="text-center">No blocked users.</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
